<resources>

    <style name="BaseLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#CCCCCC</item>
    </style>

    <style name="BaseInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_input</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!-- Base CheckBox Style-->
    <style name="BaseCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/selector_base_checkbox</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#9e9e9e</item>
        <item name="android:paddingStart">4dp</item>
    </style>

    <!-- Base Button Style-->
    <style name="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/selector_base_button</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
